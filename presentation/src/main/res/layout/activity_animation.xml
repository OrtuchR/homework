<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/animLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/animImageView"
        android:layout_width="134dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/marginVerticalElement" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginVerticalElement">

        <EditText
            android:id="@+id/animEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginHorizontalTextView"
            android:layout_weight="3"
            android:hint="@string/animEditText"
            android:inputType="phone"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/animButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginHorizontalTextView"
            android:layout_weight="1"
            android:background="@drawable/anim_button"
            android:text="@string/animButton"
            android:textAllCaps="false"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.gmail.ortuchr.homework.presentation.screen.homework.hw04.Diagram
            android:id="@+id/myDiagram"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/marginVerticalElement"
            android:visibility="invisible"
            android:layout_gravity="center_vertical|center_horizontal"/>

    </LinearLayout>

</LinearLayout>