<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simpleWhite"
    android:orientation="vertical"
    android:padding="@dimen/paddingVerticalElement">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageViewUserPictureBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginVerticalElement"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameText"
                style="@style/userText"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/userSurnameText"
                style="@style/userText"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonEditUser"
            style="@style/userButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/userEditButton" />

        <Button
            android:id="@+id/buttonDeleteUser"
            style="@style/userButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/userDeleteButton" />
    </RelativeLayout>
</LinearLayout>