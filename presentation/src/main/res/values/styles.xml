<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--For MainActivity-->
    <style name="mainScrollView">
        <item name="android:background">@drawable/main_background</item>
    </style>

    <style name="mainLinearLayout">
        <item name="android:paddingTop">@dimen/paddingVerticalLinearLayout</item>
        <item name="android:paddingBottom">@dimen/paddingVerticalLinearLayout</item>
    </style>

    <style name="startHomework">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:layout_marginTop">@dimen/marginVerticalTextView</item>
        <item name="android:layout_marginBottom">@dimen/marginVerticalTextView</item>
        <item name="android:layout_marginLeft">@dimen/marginHorizontalTextView</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:drawableLeft">@drawable/drawable_left_picture</item>
        <item name="android:fontFamily">fantasy</item>
    </style>


    <!--For OnClickActivity-->
    <style name="myTextView">
        <item name="android:layout_height">@dimen/zeroLayout</item>
        <item name="android:layout_weight">@dimen/editTextLayoutWeight</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myButton">
        <item name="android:layout_height">@dimen/zeroLayout</item>
        <item name="android:layout_weight">@dimen/buttonLayoutWeight</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>


    <!--For FlagsActivity-->
    <style name="separateFlag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/flagHeight</item>
        <item name="android:layout_marginTop">@dimen/flagMarginTop</item>
    </style>


    <!--For LoadPictureActivity-->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/backgroundLoadButton</item>
    </style>

    <style name="loadButton">
        <item name="android:background">@drawable/load_button</item>
        <item name="android:paddingStart">@dimen/paddingHorizontalElement</item>
        <item name="android:paddingEnd">@dimen/paddingHorizontalElement</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <!--For UserListActivity-->
    <style name="userButton">
        <item name="android:background">@drawable/user_button</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/simpleBlack</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="userText">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/simpleBlack</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColorHint">@color/paleGrey</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--For PersonInfoActivity-->
    <style name="personInfoTextView">
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:textColor">@color/simpleBlack</item>
        <item name="android:background">@drawable/text_view_border</item>
        <item name="android:padding">@dimen/drawablePadding</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!--For StudentListActivity-->
    <style name="studentInfoTextView">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/simpleBlack</item>
        <item name="android:background">@drawable/text_view_border</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/drawablePadding</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="studentButtonText">
        <item name="android:background">@drawable/user_button</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/simpleBlack</item>
    </style>

</resources>
