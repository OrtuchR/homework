<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:paddingStart="@dimen/paddingHorizontalElement"
    android:paddingEnd="@dimen/paddingHorizontalElement"
    android:background="@color/paleGrey">

    <EditText
        android:layout_alignParentTop="true"
            android:id="@+id/editTextSearchUser"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="@dimen/textSize"
            android:textColor="@color/simpleBlack"
            android:inputType="text"
            android:hint="@string/userSearchText"
            android:textColorHint="@color/paleGrey"
            android:paddingStart="@dimen/paddingHorizontalElement"
            android:paddingEnd="@dimen/paddingHorizontalElement"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
        android:background="@color/simpleWhite"/>

    <Button
        android:id="@+id/buttonAddUser"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/userAddButtonText"
        android:textSize="@dimen/textSize"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/simpleWhite"
        android:layout_alignEnd="@+id/editTextSearchUser"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_user_button"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/editTextSearchUser"
        android:id="@+id/recyclerViewUsersList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>